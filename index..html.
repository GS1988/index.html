        }

        .header-container {
            color: white;
        }

        .fm {
            font-weight: bold;
        }

        nav {
            margin-top: 10px;
            text-align: center;
        }

        #menu-btn {
            background-color: #e57373; /* Rojo bajito */
            color: white;
            border: none;
            padding: 10px 20px;
            cursor: pointer;
            font-size: 16px;
        }

        #menu-btn:hover {
            background-color: #c62828; /* Rojo más oscuro */
        }

        .menu-content {
            display: none;
